---
import type { JsxElement } from 'typescript';
import Card from '../components/Card.astro';
import AccentButton from './AccentButton.astro';

interface Props {
  items: {
    title: string;
    description: string;
    button?: string;
    link?: string;
  }[];
}

const {items} = Astro.props;
---

<div class="flex flex-col md:flex-row p-4">
  {items.map(({title, description, button, link}) => (
    <div class="basis-1/3 p-4 grow-0 shrink-0">
      <Card className="h-full" title={title}>
        <p>{description}</p>
        { button ? (
          <div class="mt-4 w-full flex justify-center" >
          <a href={link ? link: "#"}>
            <AccentButton>{button}</AccentButton>
          </a>
          </div>) : null
        }
      </Card>
    </div>
  ))}
</div>
