---
import Card from '../components/Card.astro';

interface Props {
  items: {
    title: string;
    description: string;
  }[];
}

const {items} = Astro.props;
---

<div class="flex flex-col md:flex-row p-4">
  {items.map(({title, description}) => (
    <div class="basis-1/3 p-4 grow-0 shrink-0">
      <Card className="h-full" title={title}>
        <p>{description}</p>
      </Card>
    </div>
  ))}
</div>
